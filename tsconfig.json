{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": { "*": ["types/*"] },
      "target": "ES2018",
      "module": "commonjs",
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "allowJs": false,
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "strict": true,
      "types": [
        "node",
      ]
    },
    "include": [
      "src/**/*",
      "bin/*",
      "test-e2e/**/*",
    ],
    "exclude": [
      "node_modules"
    ],
  }
