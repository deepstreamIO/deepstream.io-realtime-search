{
  "name": "@deepstream/realtime-search",
  "version": "0.0.2",
  "description": "A realtime search provider for databases using changefeeds",
  "scripts": {
    "start": "node dist/bin/realtime-search",
    "start:dev": "ts-node bin/realtime-search",
    "tsc": "sh scripts/tsc.sh",
    "lint": "tslint --project .",
    "lint:fix": "npm run lint -- --fix",
    "test": "ts-node --transpile-only --project tsconfig.json --files ./node_modules/.bin/cucumber-js test-e2e --require './test-e2e/steps/**/*.ts' --retry --exit",
    "test:coverage": "nyc cucumber-js test-e2e --require './test-e2e/steps/**/*.ts' --retry --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deepstreamIO/deepstream.io-realtime-search.git"
  },
  "keywords": [
    "realtime",
    "search",
    "mongodb",
    "rethinkdb",
    "deepstream"
  ],
  "author": "deepstreamHub GmbH",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/deepstreamIO/deepstream.io-realtime-search/issues"
  },
  "dependencies": {
    "@deepstream/client": "^4.1.3",
    "@deepstream/types": "^1.0.2",
    "commander": "^3.0.1",
    "mongodb": "^3.3.2",
    "pino": "^5.13.5",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@deepstream/protobuf": "^1.0.0",
    "@types/cucumber": "^4.0.7",
    "@types/mongodb": "^3.3.1",
    "@types/pino": "^5.8.12",
    "@types/ramda": "^0.26.21",
    "chai": "^4.2.0",
    "cucumber": "^5.1.0",
    "husky": "^3.0.5",
    "nyc": "^14.1.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "typescript": "^3.5.3"
  },
  "homepage": "https://github.com/deepstreamIO/deepstream.io-realtime-search#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run tsc"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "reporter": [
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
